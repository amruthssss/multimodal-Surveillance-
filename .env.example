# üöÄ MULI MODAL SYSTEM - Complete Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================================
# ü§ñ EXISTING AI SYSTEM CONFIGURATION
# ===================================
# Core Flask
FLASK_SECRET=change_me_dev
VIDEO_SOURCE=0
FRAME_INTERVAL=3
SAVE_MEDIA=true

# Database
DATABASE_URL=sqlite:///data/logs/events.db

# Mail / SMTP (optional for alerts)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=you@example.com
MAIL_PASSWORD=yourpassword
ALERT_FROM_EMAIL=alerts@example.com
ALERT_TO_EMAIL=dest@example.com

# Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
ALERT_TO_PHONE=

# Fusion thresholds (tune as needed)
FUSION_LOW_THRESHOLD=1.5
FUSION_HIGH_THRESHOLD=4.0
W_ACTION=0.4
W_POSE=0.2
W_EMOTION=0.2
W_AUDIO=0.2

# Celery (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================================
# üîê AUTHENTICATION SYSTEM CONFIGURATION
# ===================================
# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Security Secrets
# Generate a strong JWT secret (at least 64 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_64_characters_long_random_string
ENCRYPTION_KEY=your_32_character_encryption_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/muli_modal_auth

# Email Configuration (Nodemailer) - Using existing SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
FROM_EMAIL=noreply@mulimodal.com
FROM_NAME=Muli Modal Authentication

# SMS Configuration (Twilio) - Enhanced from existing
TWILIO_PHONE_NUMBER=+1234567890

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3
OTP_RESEND_COOLDOWN=60

# TOTP (Authenticator app) settings
TOTP_ISSUER=Muli Modal
TOTP_WINDOW=1
TOTP_STEP=30

# Backup codes
BACKUP_CODES_COUNT=8
BACKUP_CODES_LENGTH=8

# Security Settings
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30
PASSWORD_RESET_EXPIRY=3600
SESSION_TIMEOUT=3600
REFRESH_TOKEN_EXPIRY=604800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/auth.log

# AI Integration
AI_API_URL=http://localhost:8000
AI_API_KEY=your_ai_api_key

# WebSocket
WEBSOCKET_PORT=5001
WEBSOCKET_ORIGINS=http://localhost:3000

# Development Settings
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_SMS=true
ENABLE_MOCK_EMAIL=false

# Optional OAuth (Google, GitHub)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
